<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamawesome.projectq.HBOICT"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Site1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Project1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busBtn"
        app:layout_constraintVertical_bias="0.113" />

    <Button
        android:id="@+id/Site3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Project2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Site1"
        app:layout_constraintRight_toLeftOf="@+id/Site2"
        app:layout_constraintTop_toBottomOf="@+id/busBtn"
        app:layout_constraintVertical_bias="0.113"
        app:layout_constraintHorizontal_bias="0.514" />

    <Button
        android:id="@+id/seBtn"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Software Engineering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt"
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/itsmBtn"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="ITSM"
        app:layout_constraintLeft_toRightOf="@+id/seBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt"
        app:layout_constraintHorizontal_bias="0.291" />

    <Button
        android:id="@+id/busBtn"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Business"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seBtn"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/hboitcTxt"
        android:layout_width="371dp"
        android:layout_height="299dp"
        android:text="ICT is overal en niet meer weg te denken uit onze maatschappij. Het brede vakgebied innoveert voortdurend, waardoor oplossingsgerichte specialisten met technische vaardigheden onmisbaar zijn. Gedurende de opleiding HBO-ICT word je opgeleid tot een ICT-professional, die weet wat gebruikers nodig hebben. Met jouw computer skills en sociale vaardigheden ben je een waardevolle medewerker voor vele bedrijven.
\n\n Bij Project 1, Project 2 en Project 3 vind je 2 verschillende projecten met meer informatie. Deze zijn gemaakt door 1e jaars ICT op Saxion Enschede"
        tools:text="ICT is overal en niet meer weg te denken uit onze maatschappij. Het brede vakgebied innoveert voortdurend, waardoor oplossingsgerichte specialisten met technische vaardigheden onmisbaar zijn. Gedurende de opleiding HBO-ICT word je opgeleid tot een ICT-professional, die weet wat gebruikers nodig hebben. Met jouw computer skills en sociale vaardigheden ben je een waardevolle medewerker voor vele bedrijven.

\n\n Bij Project 1, Project 2 en Project 3 vind je 2 verschillende projecten met meer informatie. Deze zijn gemaakt door 1e jaars ICT op Saxion Enschede"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/saxionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Inschrijven"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seBtn" />

    <Button
        android:id="@+id/Site2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Project3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itsmBtn"
        app:layout_constraintVertical_bias="0.119" />

</android.support.constraint.ConstraintLayout>
