<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamawesome.projectq.HBOICT"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/seBtn"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Software Engineering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt" />

    <Button
        android:id="@+id/itsmBtn"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="ITSM"
        app:layout_constraintLeft_toRightOf="@+id/seBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt" />

    <Button
        android:id="@+id/busBtn"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Business"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seBtn"
        app:layout_constraintTop_toBottomOf="@+id/hboitcTxt" />

    <TextView
        android:id="@+id/hboitcTxt"
        android:layout_width="301dp"
        android:layout_height="217dp"
        android:text="ICT is overal en niet meer weg te denken uit onze maatschappij. Het brede vakgebied innoveert voortdurend, waardoor oplossingsgerichte specialisten met technische vaardigheden onmisbaar zijn. Gedurende de opleiding HBO-ICT word je opgeleid tot een ICT-professional, die weet wat gebruikers nodig hebben. Met jouw computer skills en sociale vaardigheden ben je een waardevolle medewerker voor vele bedrijven."
        tools:text="ICT is overal en niet meer weg te denken uit onze maatschappij. Het brede vakgebied innoveert voortdurend, waardoor oplossingsgerichte specialisten met technische vaardigheden onmisbaar zijn. Gedurende de opleiding HBO-ICT word je opgeleid tot een ICT-professional, die weet wat gebruikers nodig hebben. Met jouw computer skills en sociale vaardigheden ben je een waardevolle medewerker voor vele bedrijven."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508" />

    <Button
        android:id="@+id/saxionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Inschrijven"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seBtn" />

</android.support.constraint.ConstraintLayout>
