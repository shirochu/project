<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamawesome.projectq.MainActivity">


    <Button
        android:id="@+id/quizBtn"
        android:layout_width="125dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/SaxGreen"
        android:text="Doe de Quiz!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.743" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/saxion"
        tools:layout_editor_absoluteY="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.495" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="280dp"
        android:layout_height="123dp"
        android:text="Deze app hebben we gemaakt zodat jij kunt zien of HBO ICT iets voor je is.
we beginnen met een kleine quiz met wat leuke vragen over ICT.
daarna kun je informatie over de 3 verschillende richtingen lezen."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintBottom_toTopOf="@+id/quizBtn" />

</android.support.constraint.ConstraintLayout>
