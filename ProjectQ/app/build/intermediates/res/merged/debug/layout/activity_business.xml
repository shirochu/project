<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamawesome.projectq.Business"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/jobBTN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/SaxGreen"
        android:text="Beroepsbeeld BIM"
        app:layout_constraintRight_toLeftOf="@+id/jobBTN2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.525"
        android:layout_marginLeft="69dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="333dp"
        android:layout_height="88dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:text="Business, IT en Management (BIM)"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="389dp"
        android:layout_height="237dp"
        android:text="Bij BIM word je opgeleid tot een specialist die iets weet van organisaties, het gebruik van IT en de behoefte van de gebruikers.  Deze kennis gebruik je om de wensen van de organisatie samen te voegen met de wensen van de eindgebruikers op vlak van IT. Je gaat niet zelf de dingen bouwen maar jij zorgt voor alle benodigde informatie en draagt dit over aan de specialisten die het bouwen. In feite zorg jij er dus voor dat IT jargon word vertaald naar een begrijpelijke taal voor organisaties!
Doordat er een grote opmars is van technologie in organisaties, is bijna iedere organisatie opzoek naar een specialist die verstand heeft van IT.
"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <Button
        android:id="@+id/jobBTN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/SaxGreen"
        android:text="Opleiding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.525"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.758" />


</android.support.constraint.ConstraintLayout>
